    <script>
       $(document).ready(function () {
           var stickyNavTop = $('.main-menu.hidden-xs').offset().top;

            var stickyNav = function () {
                var scrollTop = $(window).scrollTop();

                if (scrollTop > stickyNavTop) {
                    $('div.span6.center.hidden-xs').removeClass('hidden');
                    
                    $('a.brand.hidden-xs img').removeClass('hidden');
                   
                    
                } else {
                    $('div.span6.center.hidden-xs').addClass('hidden');
                    $('a.brand.hidden-xs img').addClass('hidden');

                }
            };

            stickyNav();

            $(window).scroll(function () {
                stickyNav();
            });
        });

    </script>
