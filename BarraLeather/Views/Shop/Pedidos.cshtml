<body ng-controller="PedidosController">

    <div id="wrapper">


        <section class="header_text sub">
            <img class="pageBanner" src="themes/images/pageBanner.png" alt="Productos">
            <h4><span>Historial de Pedidos</span></h4>
        </section>
        <section class="main-content">
            <div class="row">
                <div class="span9">
                    <h4 class="title"><span class="text">Tu <strong>Historial</strong></span></h4>
                    <div style="overflow-y:auto!important;overflow-x:auto;height:600px!important">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Numero</th>
                                    <th>Fecha</th>
                                    <th>Monto</th>
                                    <th>Estatus</th>
                                    <th>Ver Detalle</th>
                                 </tr>
                            </thead>

                            <tbody>

                                <tr ng-repeat="item in pedidos track by $index">
                                    <td>{{item.id}}</td>
                                    <td>{{item.fecha}}</td>
                                    <td>S/.{{item.total}}</td>
                                    <td >
                                        <a ng-if="item.estatus==0" href="#">Pagar</a>
                                        <a ng-if="item.estatus==1">Pagado</a>
                                        <a ng-if="item.estatus==2">Entregado</a>
                                    </td>
                                    <td><a href=#>Detalle</a></td>
                                </tr>


                            </tbody>
                        </table>
                    </div>
                    <hr>


                </div>
                <div style="padding-top:18px" class="span3 col">

                    <div class="block">
                        <h4 class="title">
                            <span class="pull-left"><span class="text">Randomize</span></span>

                        </h4>
                        <div id="myCarousel-1" class="carousel slide">
                            <div class="carousel-inner">
                                <div class="active item">
                                    <ul class="thumbnails listing-products">
                                        <li class="span3">
                                            <div class="product-box">
                                                <span class="sale_tag"></span>
                                                <a href="/Productos/Details/{{ramprod.id}}"><img alt="" src="~/Content/themes/images/ladies/{{ramprod.foto}}"></a><br />
                                                <a href="/Productos/Details/{{ramprod.id}}" class="title">{{ramprod.nombre}}</a><br />
                                                <a href="" class="category">{{ramprod.category}}</a>
                                                <p class="price">S/. {{ramprod.precio}}</p>
                                            </div>
                                        </li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div id="id01" class="w3-modal">
            <div class="w3-modal-content">

                <div class="w3-container">
                    <span ng-click="Modal('id01',false)" class="w3-button w3-display-topright">&times;</span>
                    <h2>Procesar Pedido</h2>
                    <p>Desea Procesar su Pedido?</p>
                    <p class="cart-total left">
                        <strong>Sub-Total</strong>:S/. {{total()}}<br>
                        <strong>Impuesto (0.00)</strong>: S/. 0.00<br>
                        <strong>Reparto (0.00)</strong>: S/0.00<br>
                        <strong>Total</strong>: S/. {{total()}}<br>
                    </p>
                    <p><button class="w3-btn w3-white w3-border w3-right">Procesar</button><button ng-click="Modal('id01',false)" class="w3-btn w3-white w3-border w3-border-red w3-text-red w3-round-large">Cancelar</button></p>
                </div>
            </div>
        </div>


    </div>

    <script>

        var categorys = JSON.parse('@Html.Raw(ViewBag.categorys)');
        var pedidos = JSON.parse('@Html.Raw(ViewBag.pedidos)');
    </script>
</body>